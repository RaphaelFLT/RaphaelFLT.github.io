<style>
  .skills-container {
    padding: 2rem 0;
    width: 100%;
  }
  
  .skills-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 1.5rem;
    width: 100%;
  }
  
  .skill-card {
    background: linear-gradient(145deg, rgba(255,255,255,0.05), rgba(255,255,255,0.1));
    border-radius: 12px;
    padding: 1.5rem;
    transition: all 0.3s ease;
    border: 1px solid rgba(255,255,255,0.08);
    box-shadow: 0 4px 20px rgba(0,0,0,0.1);
    position: relative;
    overflow: hidden;
  }
  
  .skill-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(0,0,0,0.15);
    border-color: var(--accent-regular);
  }
  
  .skill-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 4px;
    height: 100%;
    background: linear-gradient(180deg, var(--accent-regular), transparent);
    opacity: 0;
    transition: opacity 0.3s ease;
  }
  
  .skill-card:hover::before {
    opacity: 1;
  }
  
  .skill-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    border-radius: 12px;
    background: linear-gradient(135deg, var(--accent-regular), var(--accent-dark));
    margin-bottom: 1rem;
    color: white;
  }
  
  .skill-card h3 {
    font-size: 1.2rem;
    margin-bottom: 1rem;
    font-weight: 600;
    color: var(--accent-light);
  }
  
  .skill-list {
    list-style-type: none;
    padding: 0;
    margin: 0;
  }
  
  .skill-list li {
    position: relative;
    padding-left: 1.5rem;
    margin-bottom: 0.6rem;
    line-height: 1.4;
  }
  
  .skill-list li::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0.5rem;
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background-color: var(--accent-regular);
  }
  
  .skill-link {
    color: var(--accent-light);
    text-decoration: none;
    position: relative;
    transition: all 0.3s ease;
  }
  
  .skill-link:hover {
    color: var(--accent-regular);
  }
  
  .skill-link::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 1px;
    background-color: var(--accent-regular);
    transition: width 0.3s ease;
  }
  
  .skill-link:hover::after {
    width: 100%;
  }
  
  @media (max-width: 768px) {
    .skills-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

<style>
	:root {
		--accent-light-rgb: 224, 204, 250;
	}
	
	.box {
		border: 1px solid var(--gray-800);
		border-radius: 0.75rem;
		padding: 1.5rem;
		background-color: var(--gray-999_40);
		box-shadow: var(--shadow-sm);
	}

	.skills {
		display: flex;
		flex-direction: column;
		gap: 3rem;
	}

	.skills h2 {
		font-size: var(--text-lg);
	}

	.skills p {
		color: var(--gray-400);
	}

	.parcours {
		margin-top: 3rem;
	}

	.timeline {
		list-style: none;
		padding: 0;
		position: relative;
	}
	
	.timeline:before {
		content: '';
		position: absolute;
		top: 0;
		left: 7rem;
		height: 100%;
		width: 3px;
		background: linear-gradient(to bottom, var(--accent-regular), var(--accent-dark));
		clip-path: polygon(0 0, 100% 0, 50% 100%, 0 0);
		transform: scaleY(1.05);
	}

	.timeline-item {
		position: relative;
		margin-bottom: 2rem;
		display: flex;
		gap: 2rem;
	}

	.timeline-item:before {
		content: '';
		position: absolute;
		top: 0.5rem;
		left: 7rem;
		height: 1rem;
		width: 1rem;
		border-radius: 50%;
		background: var(--accent-regular);
		transform: translateX(-0.45rem);
		box-shadow: 0 0 0 3px rgba(var(--accent-light-rgb), 0.3);
		z-index: 1;
	}

	.timeline-year {
		min-width: 7rem;
		font-weight: bold;
		color: var(--accent-regular);
		text-align: right;
		padding-right: 1rem;
	}

	.timeline-content {
		padding-bottom: 1rem;
		padding-left: 1rem;
	}

	.timeline-content strong {
		display: block;
		margin-bottom: 0.25rem;
	}
	
	.timeline-header {
		display: flex;
		flex-direction: column;
		margin-bottom: 0.75rem;
	}

	.timeline-header p {
		margin: 0.1rem 0 0.5rem 0;
		font-size: 0.9rem;
	}

	.location {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		margin-top: 0.5rem;
	}

	.location p {
		margin: 0;
		font-size: 0.9rem;
		color: var(--gray-400);
	}

	.status {
		display: inline-flex;
		align-items: center;
		padding: 0.25rem 0.75rem;
		border-radius: 1rem;
		font-size: 0.75rem;
		font-weight: 600;
		white-space: nowrap;
		width: fit-content;
	}
	
	.status:before {
		content: '';
		display: inline-block;
		width: 0.5rem;
		height: 0.5rem;
		border-radius: 50%;
		margin-right: 0.4rem;
	}
	
	.status.in-progress {
		background-color: rgba(var(--accent-light-rgb), 0.2);
		color: var(--accent-regular);
	}
	
	.status.in-progress:before {
		background-color: var(--accent-regular);
		box-shadow: 0 0 0 2px rgba(var(--accent-light-rgb), 0.3);
		animation: pulse 2s infinite;
	}
	
	.status.interrupted {
		background-color: rgba(255, 100, 100, 0.2);
		color: rgb(255, 100, 100);
	}
	
	.status.interrupted:before {
		background-color: rgb(255, 100, 100);
	}
	
	.status.completed {
		background-color: rgba(100, 200, 100, 0.2);
		color: rgb(100, 200, 100);
	}
	
	.status.completed:before {
		background-color: rgb(100, 200, 100);
		position: relative;
	}
	
	.status.completed:after {
		content: '✓';
		position: absolute;
		font-size: 0.5rem;
		margin-left: 0.3rem;
		margin-top: -0.05rem;
		color: white;
	}
	
	@keyframes pulse {
		0% {
			box-shadow: 0 0 0 0 rgba(var(--accent-light-rgb), 0.7);
		}
		70% {
			box-shadow: 0 0 0 6px rgba(var(--accent-light-rgb), 0);
		}
		100% {
			box-shadow: 0 0 0 0 rgba(var(--accent-light-rgb), 0);
		}
	}

	.timeline-content p {
		margin: 0;
		color: var(--gray-400);
	}

	@media (min-width: 50em) {
		.box {
			border-radius: 1.5rem;
			padding: 2.5rem;
		}

		.skills {
			display: grid;
			grid-template-columns: repeat(3, 1fr);
			gap: 5rem;
		}

		.skills h2 {
			font-size: var(--text-2xl);
		}
		
		.timeline:before {
			left: 10rem;
		}

		.timeline-item {
			gap: 3rem;
		}

		.timeline-item:before {
			left: 10rem;
		}

		.timeline-year {
			min-width: 10rem;
			font-size: var(--text-lg);
		}
	}
</style>